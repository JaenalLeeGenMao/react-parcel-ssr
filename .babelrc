{
  "presets": ["env", "stage-0", "react"],
  "plugins": [
    [
      "babel-plugin-styled-components",
      {
        "fileName": true,
        "displayName": true,
        "ssr": true
      }
    ],
    [
      "babel-plugin-root-import",
      {
        "rootPathSuffix": "src"
      }
    ],
    "transform-class-properties"
  ],
  "env": {
    "server": {
      "presets": [
        [
          "env",
          {
            "targets": { "node": "current" }
          }
        ],
        "stage-0",
        "react"
      ],
      "plugins": [
        [
          "babel-plugin-styled-components",
          {
            "fileName": true,
            "displayName": true,
            "ssr": true
          }
        ],
        [
          "babel-plugin-root-import",
          {
            "rootPathSuffix": "src"
          }
        ],
        "transform-class-properties",
        [
          "css-modules-transform",
          {
            "generateScopedName": "[name]_[local]_[hash:base64:5]"
          }
        ]
      ]
    }
  }
}
